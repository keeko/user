<form class="form-horizontal col-md-8 col-md-offset-3" action="{{ destination }}" method="POST">
	<input type="hidden" name="redirect" value="{{ redirect }}">
	<fieldset>
		{% if error %}
		<p class="text-danger">{{ error }}</p>
		{% endif %}
		<div class="form-group">
			<label class="control-label col-sm-2" for="login">{{ t('login.' ~ login_label, [], 'keeko.user') }}</label>
			<div class="col-sm-6">
				<input type="text" id="login" name="login" class="form-control" value="{{ login }}">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="password">{{ t('login.password', [], 'keeko.user') }}</label>
			<div class="col-sm-6">
				<input type="password" id="password" name="password" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button class="btn btn-success">{{ t('login.submit', [], 'keeko.user') }}</button>
			</div>
		</div>
	</fieldset>
</form>