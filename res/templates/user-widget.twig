<li class="dropdown">
	<a href="" id="user-widget-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
		{% if user.isGuest() %}
		Login
		{% else %}
		<i class="fa fa-user" aria-hidden="true"></i> {{ user.getDisplayName() }}
		{% endif %}
		<span class="caret"></span>
	</a>
	<ul class="dropdown-menu" aria-labelledby="user-widget-dropdown">
		{% if user.isGuest() %}
		<li>
			<form action="{{ destination }}" method="POST" class="container-fluid">
				<label>{{ t('widget.login', [], 'keeko.user') }}</label>
				<input type="hidden" name="redirect" value="{{ redirect }}">
				<div class="form-group form-group-sm">
					<input type="text" id="login" name="login" class="form-control" placeholder="{{ t('login.' ~ login_label, [], 'keeko.user') }}">
				</div>
				<div class="form-group form-group-sm">
					<input type="password" id="password" name="password" class="form-control" placeholder="{{ t('login.password', [], 'keeko.user') }}">
				</div>
				<div class="form-group form-group-sm">
					<button class="btn btn-success">{{ t('login.submit', [], 'keeko.user') }}</button>
				</div>
			</form>
		</li>
		<li><a href="{{ account_url ~ t('slug.forget-password', [], 'keeko.user') }}">{{ t('widget.forget-password', [], 'keeko.user') }}</a></li>
		{% else %}
		<li><a href="{{ account_url }}">
		<i class="fa fa-dashboard" aria-hidden="true"></i> {{ t('widget.dashboard', [], 'keeko.user') }}</a>
		</li>
		<li>
			<a href="{{ account_url ~ t('slug.profile', [], 'keeko.user') }}">
			<i class="fa fa-user" aria-hidden="true"></i> {{ t('widget.profile', [], 'keeko.user') }}</a>
		</li>
		<li>
			<a href="{{ account_url ~ t('slug.change-password', [], 'keeko.user') }}">
			<i class="fa fa-key" aria-hidden="true"></i> {{ t('widget.change-password', [], 'keeko.user') }}</a>
		</li>
		<li>
			<a href="{{ account_url ~ t('slug.logout', [], 'keeko.user') }}">
			<i class="fa fa-sign-out" aria-hidden="true"></i> {{ t('widget.logout', [], 'keeko.user') }}</a>
		</li>
		{% endif %}
	</ul>
</li>